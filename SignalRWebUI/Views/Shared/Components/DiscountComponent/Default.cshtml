@model List<SignalR.DTOLayer.Discount.ResultDiscountDto>
<section class="offer_section layout_padding-bottom">
    <div class="offer_container">
        <div class="container ">
            <div class="row">
                @for(int i = 0; i < Model.Count; i++)
                {
                    <div class="col-md-6  ">
                        <div class="box ">
                            <div class="img-box">
                                <img src="~/@Model[i].ImageUrl" alt="">
                            </div>
                            <div class="detail-box">
                                <h5>
                                    @Model[i].Title
                                </h5>
                                <h6>
                                    <span>@Model[i].DiscountAmount%</span> İndirim
                                </h6>
                                <a href="">
                                    Şimdi Sipariş Ver
                                    <i class="bi bi-cart-fill ml-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
