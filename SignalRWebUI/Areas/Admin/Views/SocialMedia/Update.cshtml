@model SignalRWebUI.Dtos.SocialMediaDtos.UpdateSocialMediaDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="card p-3">
    <div class="card-header">
        <div class="card-title">Sosyal Medya verisi güncelle</div>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id">
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Url" placeholder="Link">
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Icon" placeholder="İkon">
                    </div>
                </div>
            </div>
        </div>
        <button class="btn btn-success" type="submit">Kaydet</button>
    </form>
</div>

