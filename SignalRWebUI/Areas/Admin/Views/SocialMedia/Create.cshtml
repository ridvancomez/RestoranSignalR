 @model SignalRWebUI.Dtos.SocialMediaDtos.CreateSocialMediaDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="card p-3">
    <div class="card-header">
        <div class="card-title ml-2">Sosyal Medya verisi ekle</div>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Url" placeholder="Link">
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Icon" placeholder="İkon">
                    </div>
                </div>

            </div>
        </div>
        <button class="btn btn-success ml-4" type="submit">Kaydet</button>
    </form>
</div>

