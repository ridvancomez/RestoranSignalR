 @model SignalRWebUI.Dtos.ContactUsDtos.CreateContactUsDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="card p-3">
    <div class="card-header">
        <div class="card-title ml-2">İletişim ekle</div>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Location" placeholder="Lokasyon">
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numarası">
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="email" class="form-control" asp-for="Email" placeholder="E Posta">
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <textarea class="form-control" asp-for="FooterDescription" placeholder="Footer Açıklama"></textarea>
                    </div>
                </div>

            </div>
        </div>
        <button class="btn btn-success ml-4" type="submit">Kaydet</button>
    </form>
</div>

